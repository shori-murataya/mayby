<div class="new-background">
<div class="form-box">
<h1 class="new-mayby">編集ページ</h1>
<% @post.errors.full_messages.each do |message| %>
  <p style="color:red;"><%= message %></p>
<% end %>
<%= form_tag("/posts/#{@post.id}/update") do%>
  <p>Maybyの名前</p>
  <input type="text" class="mayby-name" name="name" value="<%= @post.name %>">
  <p>遊び方</p>
  <input type="text" class="email" name="howto" value="<%= @post.howto %>">
  <input class="send-btn" type="submit" value="変更">
<% end %>
</div>
</div>