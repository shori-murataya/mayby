<div class="posts-index-background">
  <div class="index-box">
    <h1>Mayby一覧</h1>
    <% @posts.each do |post| %>
      <div class="post-box">
        <p class="post">Maybyの名前</p>
        <p class="post"><%= post.name %></p>
        <p class="post">遊び方</p>
        <p class="post"><%= post.howto %></p>
        <p class="post"><%= post.count %>/<%= post.difficulty %></p>
        <%= link_to("詳細","/posts/#{post.id}/show")  %>
        <% if @current_user.id == post.user_id %>
        <%= link_to("編集","/posts/#{post.id}/edit") %>
        <% end %>
        <%= link_to("消す","/posts/#{post.id}/destroy",{method:"post"}) %>
      </div>
    <% end %>
  </div>
</div>
