<div class="post-new-background">
  <div class="post-new-formbox">
    <h1 class="post-new-mayby">新しいMaybyをつくる</h1>
    <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |message| %>
      <p style="color:red;"><%= message %></p>
    <% end %>
    <% end %>
    <%= form_with model: @post do |f|%>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <p>Maybyの名前</p>
      <%= f.text_field :title,  {class: "post-new-name"} %>
      <p>遊び方</p>
      <%= f.text_area :howto, {class: "post-new-howto"} %>
      <div class="post-new-radio">
        <span >参加人数　　</span>
        <%= f.radio_button :num_of_people,  "一人" %>一人
        <%= f.radio_button :num_of_people,  "二人〜" %>二人〜
      </div>
      <div class="post-new-radio">
        <span >雰囲気　</span>
        <%= f.radio_button :play_style,  "もくもく" %>もくもく
        <%= f.radio_button :play_style,  "わいわい" %>わいわい
      </div>
      <%= f.submit "Mayby作成", {class: "post-new-btn"} %>
    <% end %>  
  </div>
</div>