<div class="posts-show-background">
  <div class="post-show-box">
  <!-- ユーザーの詳細 -->
        <% if @current_user.id == @post.user_id %>
      <%= link_to("/posts/#{@post.id}/edit",{class: "post-edit-icon"}) do %>
        <i class="fas fa-cog"></i>
      <% end %>
    <% end %>
    <h1><%= @post.title %></h1>    
 
    <%= link_to("/users/#{@user.id}/show") do%>
      <img class="user_image" src="<%="/user_images/#{@user.image_name}"%>">
    <% end %><!--  -->
    <p><%= @user.name %>さんの発案したMayby</p>
    <p><%=@post.num_of_people%>で<%=@post.play_style%>遊ぶ人に向いているよ！</p>
 
    <div class="like_box">
      <div id="like_<%= @post.id %>">
        <%= render partial: 'likes/like' , locals: { post: @post}%>
    </div>

    <div id="form_<%= @post.id %>">
      <%= render partial: 'comments/form' , locals: { post:@post,comment:@comment} %>
    </div>

    <div id="error">
      <%= render partial: 'comments/error' , lacals: { comment: @comment } %>
    </div>
    
    <div id="come_index">
       <%= render partial: 'comments/index' , locals: { comments:@comments} %>
    </div> 
    <!--<%= link_to_next_page @comments, 'もっと見る', remote: true, id: 'more_link' %>-->
    <%= paginate @comments %>
</div>