<div class="new-background">
<div class="form-box">
<h1 class="new-mayby">編集ページ</h1>
<% @user.errors.full_messages.each do |message| %>
  <p style="color:red;"><%= message %></p>
<% end %>
<%= form_tag("/users/#{@user.id}/update") do%>
  <p>お名前</p>
  <input type="text" class="user-name" name="name" value="<%= @user.name %>">
  <p>メールアドレス</p>
  <input type="text" class="email" name="email" value="<%= @user.email %>">

  <input class="send-btn" type="submit" value="変更">
<% end %>
</div>
</div>