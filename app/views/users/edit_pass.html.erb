<div class="user-edit-background">
  <div class="users-index-box">
    <h1 class="user-edit-mayby">パスワード変更</h1>
      <% @user.errors.full_messages.each do |message| %>
        <p style="color:red;"><%= message %></p>
      <% end %>
    <%= form_tag("/users/#{@user.id}/update_pass") do%>
      <p>現在のパスワード</p>
      <input type="password" name="pass">
      <p>新しいパスワード</p>
      <input type="password" name="new_pass">
      <input class="user-edit-btn" type="submit" value="変更">
    <% end %>
  </div>
</div>