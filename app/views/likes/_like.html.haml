- if current_user.likes.find_by(post_id: post.id)
  = link_to post_like_path(id: post.id, post_id: post.id) ,{ method: "delete", remote: true, class: "post-nolike" } do
    %i.fas.fa-star
    = post.likes.where(post_id:post.id).count
    %span
      = link_to "人他...", post_like_path(id: post.id, post_id: post.id), class: "other-likes"
- else
  = link_to post_likes_path(post), { method:"post", remote: true, class: "post-like" } do
    %i.fas.fa-star
    = post.likes.where(post_id:post.id).count

