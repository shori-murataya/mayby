- if post.unliking_user?(current_user)
  = link_to post_likes_path(post), { method:"post", remote: true, class: "post-like" } do
    %i.fas.fa-star.rspec_unlike-star
    -if post.likes_count == nil
      %span.likes_counter 0
    -else
      %span.likes_counter= post.likes_count
- else
  = link_to post_like_path(id: post.id, post_id: post.id) ,{ method: "delete", remote: true, class: "post-nolike" } do
    %i.fas.fa-star.rspec_like-star
    %span.likes_counter= post.likes_count
    %span
      = link_to "人他...", post_like_path(id: post.id, post_id: post.id), class: "index_other_like show_other_like"