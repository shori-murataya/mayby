<div class="user-show-users-box">
  <% @user_comments.each do |comment|%>
    <div class="users-show-layout">
      <%= link_to post_path(comment.post_id) do %>
        <p><%= comment.post.title %></p>
        <p class="users-show-maybytitle"><%= comment.content %></p>
      <% end %>
    <% if comment.user_id == current_user.id%>
      <div id="user_comment_destroy">
        <%= render partial: "comments/destroy" , locals: { comment: comment } %>
      </div>
    <% end %>
    </div>
  <%end%>
</div>